properties:
  file.path:
    displayName: File Path
  file.basename:
    displayName: "Title:"
views:
  - type: cards
    name: "2026"
    filters:
      and:
        - file.folder == "Personal/Reading/Books I have read/2026"
    order:
      - file.name
      - Author
      - Date Read
    sort:
      - property: Year Read
        direction: ASC
    image: note.coverUrl
    imageFit: contain
  - type: cards
    name: "2025"
    filters:
      and:
        - file.folder.contains("Reading/Books I have read/2025")
    order:
      - file.basename
      - Author
      - Date Read
    sort:
      - property: Date Read
        direction: ASC
      - property: Year Read
        direction: ASC
    image: note.coverUrl
    imageAspectRatio: 0.8
    cardSize: 150
    imageFit: contain
  - type: cards
    name: All
    filters:
      and:
        - file.folder.contains("Reading/Books I have read")
    order:
      - file.name
      - Author
      - Read or Listened
      - coverUrl
    image: note.coverUrl
    imageFit: contain
  - type: cards
    name: Favorite Authors
    filters:
      and:
        - note["Favorite Author"] == true
    groupBy:
      property: Author
      direction: ASC
    order:
      - file.name
      - Author
    sort:
      - property: file.name
        direction: ASC
    imageFit: contain
    image: note.coverUrl
